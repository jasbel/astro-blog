---
interface Props {
  imgSrc: string;
  description: string;
  date: string;
}

const { date, description, imgSrc } = Astro.props;
---

<div class="lg:flex">
  <img class="object-cover w-full h-56 rounded-lg lg:w-64" src={imgSrc} alt="" />

  <div class="flex flex-col justify-between py-6 lg:mx-6">
    <a href="#" class="text-xl font-semibold text-gray-800 hover:underline dark:text-white">
      {description}
    </a>

    <span class="text-sm text-gray-500 dark:text-gray-300">On: {date}</span>
  </div>
</div>
